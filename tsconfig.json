{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "./dist/types",
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ES2015"],
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
